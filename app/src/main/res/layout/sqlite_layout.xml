<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorContent">

    <com.example.acticitytest.View.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.example.acticitytest.View.TitleLayout>


        <Button
            android:id="@+id/create"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="创建数据库"
            android:textAllCaps="false"
            android:background="@color/colorSuccess"
            android:textColor="@color/colorBlack"></Button>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="歌曲名："
                android:textSize="18sp"
                android:textColor="#fff"></TextView>

            <EditText
                android:id="@+id/music_name"
                android:textColor="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"></EditText>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/add_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加歌曲"
                android:textAllCaps="false"
                android:onClick="addMusic"
                android:layout_margin="5dp"
                android:textColor="@color/colorPrimary"
                android:background="@color/colorContent"></Button>


            <Button
                android:id="@+id/delete_music"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除歌曲"
                android:textAllCaps="false"
                android:onClick="deleteMusic"
                android:layout_margin="5dp"
                android:textColor="@color/colorError"
                android:background="@color/colorContent"></Button>


        </LinearLayout>


        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始听歌"
            android:textAllCaps="false"
            android:onClick="gotoMusicList"></Button>



</LinearLayout>